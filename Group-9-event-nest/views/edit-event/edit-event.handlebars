



	<!-- Begin page content -->
	<main class="container">
		
		<div >
			<div class="col-md-10 col-lg-8">
				<header class="title mt-3 mb-2">Edit Ticket Preferences</header>
				<br><br><br>
				<form class="needs-validation ml-1"  method="POST" action="/edit-eventsub" id="edit-event-form" autocomplete="off">

